<Page x:Class="Neutrition.Pages.mainppages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neutrition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="356" d:DesignWidth="495"
      FontFamily="{StaticResource RobotoFont}"
      Title="Profile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Target weight:" x:Name="TW_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="1"/>
        <Label Content="Current weight:" x:Name="CW_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="2"/>
        <Label Content="Height:" x:Name="Height_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="3"/>
        <Label Content="Calories:" x:Name="calories_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="4"/>
        <Label Content="BMI:" x:Name="BMI_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="5"/>
        <Label Content="Birth date:" x:Name="Birth_LB" Foreground="{DynamicResource Text}" HorizontalAlignment="Center" Grid.Row="6"/>
        <Rectangle x:Name="RECT" Fill="{StaticResource Secondary}" RadiusX="10" RadiusY="10" Margin="0,10,0,0" Grid.Row="7" Width="100" Height="30" VerticalAlignment="Top"/> 
        <Button x:Name="Edit_BTN" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="7" Width="100" Height="30" Background="Transparent" Foreground="{DynamicResource TextSecondary}" FontSize="16" FontWeight="Bold" BorderBrush="Transparent" />
    </Grid>
</Page>
