<Page x:Class="Neutrition.Pages.mainppages.EditFood"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neutrition.Pages.mainppages"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="300"
      FontFamily="{DynamicResource RobotoFont}"
      Title="EditFood">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Meal 1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource Text}" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,10"/>
        <Rectangle Fill="{DynamicResource Secondary}" HorizontalAlignment="Center" Width="250" Height="120" VerticalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,5" RadiusX="10" RadiusY="10"/>
        <Label Content="Ide nemtom mi megy..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource Text}" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10"/>
        <Grid Grid.Row="2" Height="120" Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Fats(G):" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource Text}"/>
                <TextBox Text="Fats(G):" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Text}" Background="Transparent" BorderBrush="Transparent" SelectionBrush="Transparent" SelectionTextBrush="{DynamicResource TextSecondary}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2">
                <Label Content="Carbs(G):" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource Text}"/>
                <TextBox Text="Carbs(G):" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Text}" Background="Transparent" BorderBrush="Transparent" SelectionBrush="Transparent" SelectionTextBrush="{DynamicResource TextSecondary}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2">
                <Label Content="Protein(G):" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource Text}"/>
                <TextBox Text="Protein(G):" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Text}" Background="Transparent" BorderBrush="Transparent" SelectionBrush="Transparent" SelectionTextBrush="{DynamicResource TextSecondary}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2">
                <Label Content="Fiber(G):" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource Text}" Grid.Column="2" Grid.Row="2"/>
                <TextBox Text="Fiber(G):" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Text}" Background="Transparent" BorderBrush="Transparent" SelectionBrush="Transparent" SelectionTextBrush="{DynamicResource TextSecondary}" Grid.Column="2" Grid.Row="2"/>
            </StackPanel>
            <Rectangle Fill="{DynamicResource Line}" HorizontalAlignment="Center" Width="250" Height="1" VerticalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="3"/>
            <Rectangle Fill="{DynamicResource Line}" HorizontalAlignment="Center" Width="1" Height="120" VerticalAlignment="Center" Grid.RowSpan="3" Grid.Column="1"/>
        </Grid>
    </Grid>
</Page>
